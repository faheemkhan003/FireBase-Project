<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
               android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
    tools:context="com.example.fahee.chatapplication.StartActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="Welcome to Movie app"
        android:textSize="24dp"
        tools:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/start_reg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/need_a_new_account"
        android:textColor="@android:color/holo_purple"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/alerdyhaveaccount_reg_btn"
        android:layout_marginBottom="79dp"/>

    <Button
        android:id="@+id/alerdyhaveaccount_reg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_purple"
        android:text="Aleardy Have Accont"
        android:layout_alignBottom="@+id/start_reg_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"/>

</RelativeLayout>
